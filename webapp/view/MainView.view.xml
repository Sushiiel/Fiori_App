<mvc:View
  controllerName="project1.controller.MainView"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
  xmlns:smartTable="sap.ui.comp.smarttable">
  <App>
    <Page id="mainPage" title="{i18n>appTitle}">
      <VBox fitContainer="true">
        <smartFilterBar:SmartFilterBar
          id="smartFilterBar"
          entitySet="ProductSet"
          useToolbar="true"
          showClearButton="true"
          persistencyKey="SmartFilterBarKey"
          enableBasicSearch="true"
          smartVariant="true" />
        <smartTable:SmartTable
          id="smartTable"
          entitySet="ProductSet"
          tableType="ResponsiveTable"
          useExportToExcel="true"
          useVariantManagement="true"
          showRowCount="true"
          enableAutoBinding="true"
          smartFilterId="smartFilterBar" />
        <HBox justify="End" class="sapUiSmallMarginTop">
          <Button text="{i18n>btnApprove}" press=".onApprovePress" />
          <Button text="{i18n>btnCustomFilter}" press=".onOpenCustomFilter" />
        </HBox>
      </VBox>
    </Page>
  </App>
</mvc:View>
